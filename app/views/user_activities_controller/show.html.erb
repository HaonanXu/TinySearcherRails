<h2>Activity Log</h2>
<table class="table table-striped table-bordered" cellspacing="0" width="100%">
  <% if @activities.present? %>
      <thead>
        <tr>
          <th>IP Address</th>
          <th>Action</th>
          <th>Status</th>
          <th>Time</th>
        </tr>
      </thead>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.ip %></td>
          <td><%= activity.action['event']%></td>
          <td><%= activity.action['status'] ? activity.action['status'] : "N/A"%></td>
          <td><%= activity.created_at %></td>
        </tr>
      <% end %>
  <% else %>
    <tr>
      Sorry, you do not have any activities logged.
    </tr>
  <% end %>
</table>