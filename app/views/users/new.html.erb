<h2>Sign Up</h2>

<%= bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-4", url: create_user_path) do |f| %>

    <%= f.text_field :name, lable: "Name" %>
    <%= f.text_field :email, lable: "Email"%>
    <%= f.password_field :password, lable: "Password" %>
    <%= f.password_field :password_confirmation, lable: "password_confirmation" %>

    <%= f.form_group do %>
        <%= f.submit "Sign Up" %>
        <%= link_to("Back", search_index_path, class: "btn btn-default") %>
    <% end %>

<% end %>

