<div class="row">
  <h2>What are you looking for ?</h2>

  <br/>

  <%= bootstrap_form_tag url: search_show_path, method: "get", layout: :inline do |f| %>
      <%= f.text_field :key_words, hide_label: true, placeholder: "Key words..."%>
      <%= f.select :site, @options, { class: "selectpicker", hide_label: true } %>
      <%= f.submit "Search" %>
      <%= link_to "Try My Luck", random_search_path, class: "btn btn-default" %>
  <% end %>
</div>